{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    "fs:read-all",
    "fs:write-all",
    "fs:scope-app-recursive",
    "core:path:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "*"
        }
      ]
    },
    "os:default"
  ]
}
